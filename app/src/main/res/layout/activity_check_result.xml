<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.oqc.result.CheckResultActivity">

    <include layout="@layout/title_head"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical"
                android:text="产品信息"
                android:textColor="@color/color_333"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品代码"
                    android:textColor="#333"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_product_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:text="PO689287678"
                    android:textColor="#666"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品名称"
                    android:textColor="#333"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:text="神马名称"
                    android:textColor="#666"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品规格"
                    android:textColor="#333"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_product_standard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:text="神马型号"
                    android:textColor="#666"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检验类型"
                    android:textColor="#333"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_quality_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:text="一般质检"
                    android:textColor="#666"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginBottom="10px"
                android:layout_marginTop="10px"
                android:background="@color/divide_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="检验类型"
                    android:textColor="#333"
                    android:textSize="13sp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rectangle_et_unfocused"
                    android:orientation="horizontal"
                    android:padding="5px">

                    <com.jzk.spinnerlibrary.MaterialSpinner
                        android:id="@+id/spinner_quality_type"
                        android:layout_width="match_parent"
                        android:layout_height="64px"
                        android:textSize="13sp"
                        app:ms_dropdown_height="wrap_content"
                        app:ms_dropdown_max_height="350dp"
                        app:ms_hint_color="@color/color_666"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_quality"
                    android:layout_width="wrap_content"
                    android:layout_height="64px"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/selector_btn_bg_login"
                    android:text="检验"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginBottom="10px"
                android:layout_marginTop="10px"
                android:background="@color/divide_color"/>

            <LinearLayout
                android:id="@+id/ll_input_bad_code"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bad_code"
                    android:textColor="@color/color_333"
                    android:textSize="13sp"/>

                <EditText
                    android:id="@+id/et_bad_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10px"
                    android:background="@drawable/bg_rectangle_et_unfocused"
                    android:ellipsize="end"
                    android:hint="@string/input_bad_code"
                    android:imeOptions="actionSearch"
                    android:paddingLeft="20px"
                    android:singleLine="true"
                    android:textColor="@color/color_666"
                    android:textSize="13sp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_bad_group_tip"
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical"
                android:text="@string/bad_code_group"
                android:textColor="#333"
                android:textSize="13sp"
                />

            <LinearLayout
                android:id="@+id/ll_bad_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="@drawable/bg_rectangle_et_unfocused"
                android:orientation="horizontal"
                android:padding="5px">

                <com.jzk.spinnerlibrary.MaterialSpinner
                    android:id="@+id/spinner_bad_groups"
                    android:layout_width="match_parent"
                    android:layout_height="64px"
                    android:textSize="13sp"
                    app:ms_dropdown_height="wrap_content"
                    app:ms_dropdown_max_height="350dp"
                    app:ms_hint_color="@color/color_666"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:text="不良代码"
                android:textColor="@color/color_333"
                android:textSize="13sp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_bac_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="20px"
        android:background="@drawable/selector_btn_bg_login"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="16sp"/>
</LinearLayout>